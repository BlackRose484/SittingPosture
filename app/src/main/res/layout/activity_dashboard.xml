<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="410dp"
        android:layout_height="107dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="756dp"
        android:background="@drawable/cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/more_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/more"
        app:layout_constraintEnd_toStartOf="@+id/user_icon"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="254dp"
        android:fontFamily="@font/concert_one"
        android:text="Hi!"
        android:textColor="#42A5F5"
        android:textSize="75sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/concert_one"
        android:text="Make your pose perfect !!!"
        android:textColor="#8C8C8C"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:layout_width="263dp"
        android:layout_height="466dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="188dp"
        android:src="@drawable/spine2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:layout_marginTop="316dp"
        android:backgroundTint="#2D93FA"
        android:backgroundTintMode="add"
        android:fontFamily="@font/changa_one"
        android:text="Camera"
        android:textAlignment="textStart"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:icon="@drawable/camera_btn"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/statistic_btn"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:layout_marginTop="572dp"
        android:backgroundTint="#2D93FA"
        android:backgroundTintMode="add"
        android:fontFamily="@font/changa_one"
        android:text="Statistic"
        android:textAlignment="textStart"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:icon="@drawable/graph"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chat_btn"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:layout_marginTop="444dp"
        android:backgroundTint="#2D93FA"
        android:backgroundTintMode="add"
        android:fontFamily="@font/changa_one"
        android:text="Chat with AI"
        android:textAlignment="textStart"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:icon="@drawable/chat"
        app:iconTint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>